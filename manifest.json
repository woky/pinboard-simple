{
	"manifest_version": 2,
	"name": "Pinboard Simple",
	"version": "1.1",
	"description": "Bookmark to Pinboard with keyboard",

	"applications": {
		"gecko": {
			"id": "pinboard-simple@example.com"
		}
	},

	"permissions": [
		"tabs",
		"activeTab"
	],

	"commands": {
		"add": {
			"description": "Bookmark current page",
			"suggested_key": {
				"default": "Alt+W"
			}
		},
		"readlater": {
			"description": "Mark current as \"read later\"",
			"suggested_key": {
				"default": "Alt+R"
			}
		}
	},

	"background": { "scripts": [ "generated/background.js" ] }
}
