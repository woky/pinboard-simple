{
	"manifest_version": 2,
	"name": "Pinboard Simple",
	"version": "1.1.9",
	"description": "Bookmark to Pinboard with keyboard",

	"applications": {
		"gecko": {
			"id": "pinboard-simple@example.com"
		}
	},

	"permissions": [
		"tabs",
		"activeTab"
	],

	"commands": {
		"bookmark": {
			"description": "Bookmark current page",
			"suggested_key": {
				"default": "Alt+W"
			}
		},
		"readLater": {
			"description": "Mark current page as \"read later\"",
			"suggested_key": {
				"default": "Alt+R"
			}
		}
	},

	"background": {
		"scripts": [
			"generated/background.js"
		]
	},

	"content_scripts": [
		{
			"matches": [ "https://pinboard.in/add*" ],
			"js": [ "generated/content.js" ],
			"run_at": "document_end"
		}
	]
}
